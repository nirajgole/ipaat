{
	"name": "df_transform",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "source",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "dest",
						"type": "DatasetReference"
					},
					"name": "sink",
					"rejectedDataLinkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "filter"
				},
				{
					"name": "sort",
					"description": "sort in descending based on views and likes"
				},
				{
					"name": "selectColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          VideoID as short,",
				"          VideoTitle as string,",
				"          Views as long,",
				"          Likes as integer,",
				"          Dislikes as integer,",
				"          Comments as integer,",
				"          DurationinMinutes as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 100,",
				"     ignoreNoFilesFound: false,",
				"     moveFiles: ['src','src/processed']) ~> source",
				"source filter(Views>=8900000 && Likes>=300) ~> filter",
				"filter sort(desc(Views, true),",
				"     desc(Likes, true)) ~> sort",
				"sort select(mapColumn(",
				"          VideoID,",
				"          VideoTitle",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectColumns",
				"selectColumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     dateFormat:'dd/MM/yyyy',",
				"     timestampFormat:'MM/dd/yyyy HH:mm:ss',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink"
			]
		}
	}
}